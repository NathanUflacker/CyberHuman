<UserControl x:Class="CyberHuman.Views.CourseDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#1E293B80"
                BorderThickness="0,0,0,1"
                BorderBrush="#334155"
                Padding="32,16">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BackButton"
                            Style="{StaticResource BackButton}"
                            Click="BackButton_Click"
                            Margin="0,0,16,0">
                        <TextBlock Text="← Voltar" FontSize="14"/>
                    </Button>
                    <StackPanel>
                        <TextBlock x:Name="TitleText"
                                 FontSize="22" 
                                 Foreground="White"
                                 FontWeight="SemiBold"/>
                        <TextBlock x:Name="CategoryText"
                                 FontSize="13" 
                                 Foreground="#94A3B8"
                                 Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Button Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Right"
                        Padding="24,10"
                        Click="EnrollButton_Click">
                    <TextBlock Text="Inscrever-se" FontSize="15"/>
                </Button>
            </Grid>
        </Border>

        <!-- Conteúdo -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     Padding="32,24">
            <StackPanel MaxWidth="700">

                <!-- Descrição -->
                <Border Style="{StaticResource CardStyle}" 
                        Margin="0,0,0,24"
                        Background="#1E293B66">
                    <TextBlock x:Name="DescriptionText"
                             FontSize="16"
                             Foreground="#CBD5E1"
                             TextWrapping="Wrap"
                             LineHeight="26"/>
                </Border>

                <!-- Cards de informação -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tag Duração -->
                    <Border Grid.Column="0" 
                            Style="{StaticResource CardStyle}"
                            Background="#1E293B66"
                            Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🕒" 
                                     FontSize="24"
                                     FontFamily="Segoe UI Emoji"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,8"
                                     Foreground="#FF22C55E"/>
                            <TextBlock Text="Duração" 
                                     FontSize="12"
                                     Foreground="#94A3B8"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock x:Name="DurationText"
                                     FontSize="14"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Editar Nível -->
                    <Border Grid.Column="1" 
                            Style="{StaticResource CardStyle}"
                            Background="#1E293B66"
                            Margin="4,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📊" 
                                     FontSize="24"
                                     FontFamily="Segoe UI Emoji"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,8"
                                     Foreground="#FFF43F5E"/>
                            <TextBlock Text="Nível" 
                                     FontSize="12"
                                     Foreground="#94A3B8"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock x:Name="LevelText"
                                     FontSize="14"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Formato -->
                    <Border Grid.Column="2" 
                            Style="{StaticResource CardStyle}"
                            Background="#1E293B66"
                            Margin="8,0,0,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="👥" 
                                     FontSize="24"
                                     FontFamily="Segoe UI Emoji"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,8"/>
                            <TextBlock Text="Formato" 
                                     FontSize="12"
                                     Foreground="#94A3B8"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Online"
                                     FontSize="14"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Módulos -->
                <Border Style="{StaticResource CardStyle}"
                        Background="#1E293B66">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="▶️" FontSize="20" Margin="0,0,8,0" FontFamily="Segoe UI Emoji"/>
                            <TextBlock Text="Módulos do Curso"
                                     FontSize="18"
                                     Foreground="White"
                                     FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel x:Name="ModulesPanel">
                            <!-- Espaço pros módulos caso eles viessem a existir -->
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>