<UserControl x:Class="CyberHuman.Views.WelcomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Elementos decorativos -->
        <Ellipse Width="128" Height="128" 
 HorizontalAlignment="Right" VerticalAlignment="Top"
 Margin="0,32,48,0" Opacity="0.2">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#EC4899" Offset="0"/>
                    <GradientStop Color="#FB7185" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="40"/>
            </Ellipse.Effect>
        </Ellipse>

        <Ellipse Width="96" Height="96" 
 HorizontalAlignment="Right" VerticalAlignment="Top"
 Margin="0,80,80,0" Opacity="0.2">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#10B981" Offset="0"/>
                    <GradientStop Color="#14B8A6" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="30"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Conteúdo principal -->
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0*"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo e branding -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Border Width="44" Height="40" CornerRadius="12" Margin="0,0,12,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#EC4899" Offset="0"/>
                            <GradientStop Color="#FB7185" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="🚀" FontSize="24" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" Foreground="#FFF3EBEB"/>
                </Border>
                <TextBlock Text="CyberHuman" 
         FontSize="24" 
         Foreground="White"
         VerticalAlignment="Center"
         FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Conteúdo central -->
            <StackPanel Grid.Row="2" 
       VerticalAlignment="Top"
       Margin="0,5,0,0"
       MaxWidth="450"
       HorizontalAlignment="Left" Height="266" Width="449">

                <TextBlock x:Name="Texto_Principal" FontSize="36" 
         Foreground="White"
         FontWeight="Bold"
         TextWrapping="Wrap"
         LineHeight="30"
         Height="97"><Run Text="Reinvente Sua"/><LineBreak/><Run Text="Carreira Profissional"/></TextBlock>

                <TextBlock Text="Recapacitação profissional pra quem busca se digitalizar."
         FontSize="16"
         Foreground="#CBD5E1"
         TextWrapping="Wrap"
         LineHeight="26"
         Margin="0,0,0,24"/>

                <!-- Badges de features -->
                <WrapPanel Margin="0,0,0,20">
                    <Border Style="{StaticResource CardStyle}" 
            Margin="0,0,12,12" 
            Padding="12,8"
            Background="#33475569">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👥" FontSize="14" Margin="0,0,8,0" Foreground="#FF100B0B"/>
                            <TextBlock Text="Todas as Idades" 
                     FontSize="13" 
                     Foreground="#E2E8F0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" 
            Margin="0,0,12,12" 
            Padding="12,8"
            Background="#33475569">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎯" FontSize="14" Margin="0,0,8,0" FontFamily="Segoe UI Emoji" Foreground="#FFDC2626"/>
                            <TextBlock Text="Prático e Objetivo" 
                                     FontSize="13" 
                                     Foreground="#E2E8F0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" 
            Margin="0,0,12,12" 
            Padding="12,8"
            Background="#33475569">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🏆" FontSize="14" Margin="0,0,8,0" Foreground="#FFEAC209"/>
                            <TextBlock Text="Certificado" 
                     FontSize="13" 
                     Foreground="#E2E8F0"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Botões CTA -->
                <StackPanel Orientation="Horizontal" Height="50">
                    <Button x:Name="StartButton"
            Style="{StaticResource PrimaryButton}"
            Click="StartButton_Click"
            Margin="0,0,16,0" Height="49">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Começar Agora" Margin="0,0,8,0"/>
                            <TextBlock Text="→" FontSize="18"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButton}">
                        <TextBlock Text="Saiba Mais"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>

</UserControl>